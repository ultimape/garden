{
    // ----
    // foam specific settings
    "foam.graph.titleMaxLength": 0,
    "foam.openDailyNote.directory": "journal/daily-journal", // a relative directory path will get appended to the workspace root. An absolute directory path will be used unmodified.
    "foam.openDailyNote.filenameFormat": "yyyy-mm-dd",
    "foam.openDailyNote.fileExtension": "md",
    "foam.openDailyNote.titleFormat": "yyyy-mm-dd | dddd, mmmm d '- Journal Entry'",
    "foam.edit.linkReferenceDefinitions": "withExtensions", //"off",
    "foam.openDailyNote.onStartup": false,
    // ----
    // vscode editor config
    "editor.minimap.enabled": false,
    "editor.wrappingIndent": "indent",
    "editor.overviewRulerBorder": false,
    "editor.lineHeight": 24,
    "editor.formatOnSave": false,
    // ----
    // markdown rules
    "[markdown]": {
        "editor.quickSuggestions": true
    },
    "markdown.preview.breaks": true,
    "vscodeMarkdownNotes.noteCompletionConvention": "noExtension",
    "vscodeMarkdownNotes.slugifyMethod": "github-slugger",
    "markdownExtended.disabledPlugins": "kbd",
    // ----
    // formatting rules
    "prettier.singleQuote": false,
    // ----
    // file rules
    "files.defaultLanguage": "markdown",
    "files.exclude": {
        "**/node_modules": true
    },
    "files.watcherExclude": {
        "**/node_modules": true
    },
    // ----
    // git settings
    //"git.enableSmartCommit": true,
    "git.postCommitCommand": "sync",
    // ----
    // pasting image config
    "pasteImage.path": "${projectRoot}/attachments/images",
    "pasteImage.showFilePathConfirmInputBox": true,
    // ----
    // spell checker settings
    "spellright.notificationClass": "information",
    // GitDoc allows for automaically committing mardown files on save.
    "gitdoc.filePattern": "**/*.md",
    "gitdoc.enabled": true,
    "gitdoc.autoPush": "onCommit",
    "gitdoc.autoCommitDelay": 3000,
    "gitdoc.commitMessageFormat": "YYYY-MM-DD HH:mm",
}