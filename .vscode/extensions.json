{
  // See http://go.microsoft.com/fwlink/?LinkId=827846
  // for the documentation about the extensions.json format
  "recommendations": [
    // Foam's own extension
    "foam.foam-vscode",
    //
    // Spell checking for text, markdown and latex
    "ban.spellright",
    //
    // A 'markdown linter' that catches common markdown formatting errors
    "DavidAnson.vscode-markdownlint",
    // Tons of markdown goodies (lists, tables of content, so much more)
    "yzhang.markdown-all-in-one",
    // bunch of useful markdown tools
    "jebbs.markdown-extended",
    // Make the preview look more like github 
    "bierner.github-markdown-preview",
    "bierner.markdown-preview-github-styles",
    "bierner.markdown-checkbox",
    "bierner.markdown-yaml-preamble",
    "bierner.markdown-emoji",
    // gives emoji autocompletion
    "bierner.emojisense",
    // footnote support in preview
    "bierner.markdown-footnotes",
    // make markdown code previews pretty
    "bierner.markdown-shiki",
    // Image-pasting for markdown
    "mushan.vscode-paste-image",
    ///
    // view pdfs striaght in vscode
    "tomoki1207.pdf",
    //
    // enables autosave to github
    "vsls-contrib.gitdoc",

  ]
}